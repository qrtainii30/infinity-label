    <div class="modal fade" id="new-project" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" style="display: flex; align-items: center; justify-content: center; height: 100vh;">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="mb-0">New Label</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="mb-3 w-100">
                        <label for="project-name" class="form-label">Label Name</label>
                        <input class="form-control width-auto" id="project-name" autocomplete="off" type="text">
                    </div>
                    <div class="form-group">
                        <label>Template Size</label>
                        <select class="form-control" id="template-size">
                            <option selected value="">Choose a Size</option>
                            <option value="5x34">5 x 34 mm</option>
                            <option value="38x100">38 X 100 mm</option>
                            <option value="50x100">50 X 100 mm</option>
                            <option value="50x50">50 X 50 mm</option>
                            <option value="76x25">76 X 25 mm</option>
                            <option value="25x38">25 X 38 mm</option>
                            <option value="19x50">19 X 50 mm</option>
                            <option value="19x38">19 X 38 mm</option>
                            <option value="13x38">13 X 38 mm</option>
                        </select>
                    </div>
                    <hr class="my-2">
                    <h5 class="mb-2 fw-semibold">Size</h5>
                    <div class="row justify-content-center">
                        <div class="col">
                            <div class="mb-3 d-flex flex-column align-items-start">
                                <label for="height" class="form-label">Height (mm)</label>
                                <input type="number" min="5" class="form-control" id="height" placeholder="E.g 10" autocomplete="off">
                            </div>
                        </div>
                        <div class="col">
                            <div class="mb-3 d-flex flex-column align-items-start">
                                <label for="width" class="form-label">Width (mm)</label>
                                <input type="number" min="5" class="form-control" id="width" placeholder="E.g 10" autocomplete="off">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-danger" data-dismiss="modal">CLOSE</button>
                    <button type="button" class="btn btn-success" id="btn-create" disabled>CREATE</button>
                </div>
            </div>
        </div>
