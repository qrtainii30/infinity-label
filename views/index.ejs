    <script src="plugins/jquery/jquery.min.js"></script>
    <script src="plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="adminlte/js/adminlte.min.js"></script>
    <script>
        var projectName = "";
        var fileName = "";

        $(document).on('keyup', '#project-name', function () {
            projectName = $(this).val();
            fileName = projectName.toLowerCase();
            fileName = fileName.replace(/ /g, '_');
            fileName = fileName + ".json";

            var height = $(document).find('#height').val();
            var width = $(document).find('#width').val();

            if (height === '' || height === ' ' || height === '0' ||
                width === '' || width === ' ' || width === '0' ||
                projectName === '' || projectName === ' ' || projectName === '0'
            ) {
                $(document).find('#btn-create').attr('disabled', 'disabled');
            } else {
                $(document).find('#btn-create').removeAttr('disabled');
            }
        });

        $(document).on('keyup', '#height', function () {
            projectName = $(this).val();
            fileName = projectName.toLowerCase();
            fileName = fileName.replace(/ /g, '_');
            fileName = fileName + ".json";

            var height = $(document).find('#height').val();
            var width = $(document).find('#width').val();

            if (height === '' || height === ' ' || height === '0' ||
                width === '' || width === ' ' || width === '0' ||
                projectName === '' || projectName === ' ' || projectName === '0'
            ) {
                $(document).find('#btn-create').attr('disabled', 'disabled');
            } else {
                $(document).find('#btn-create').removeAttr('disabled');
            }
        });

        $(document).on('keyup', '#width', function () {
            projectName = $(this).val();
            fileName = projectName.toLowerCase();
            fileName = fileName.replace(/ /g, '_');
            fileName = fileName + ".json";

            var height = $(document).find('#height').val();
            var width = $(document).find('#width').val();

            if (height === '' || height === ' ' || height === '0' ||
                width === '' || width === ' ' || width === '0' ||
                projectName === '' || projectName === ' ' || projectName === '0'
            ) {
                $(document).find('#btn-create').attr('disabled', 'disabled');
            } else {
                $(document).find('#btn-create').removeAttr('disabled');
            }
        });

        $(document).on('change', '#template-size', function () {
            var size = $(this).val();
            size = size.split('x');

            if (size.length === 0) {
                $(document).find('#height').val('');
                $(document).find('#width').val('');
            } else {
                $(document).find('#height').val(size[0]);
                $(document).find('#width').val(size[1]);
            }

            if (height === '' || height === ' ' || height === '0' ||
                width === '' || width === ' ' || width === '0' ||
                projectName === '' || projectName === ' ' || projectName === '0'
            ) {
                $(document).find('#btn-create').attr('disabled', 'disabled');
            } else {
                $(document).find('#btn-create').removeAttr('disabled');
            }
        });

        $(document).on('click', '#btn-create', function () {
            var height = $(document).find('#height').val();
            var width = $(document).find('#width').val();

            var data = [{
                "file": {
                    "project": projectName,
                    "name": fileName,
                    "height": height,
                    "width": width
                },
                "label": []
            }];

            var settings = {
                "url": "http://localhost:3000/label_create",
                "method": "POST",
                "timeout": 0,
                "headers": {
                    "Content-Type": "application/json"
                },
                "data": JSON.stringify(data),
            };

            $.ajax(settings).done(function (response) {
                console.log(response);

                if (response.type === 1) {
                    window.location.replace('editor/' + fileName);
                }
            });
        });

        $.ajax({
            url: 'http://localhost:3000/projects',
            method: 'GET',
            success: function (response) {
                $(document).find('#design').empty();

                if (response.length !== 0) {
                    var i = 0;
                    for (i = 0; i < response.length; i++) {
                        $(document).find('#design').append(`<li class="nav-item">
                                                                <a href="editor/` + response[i].file.name + `" class="nav-link text-dark">
                                                                    `+ response[i].file.project + ` <span class="float-right"><i class="fa fa-play text-success"></i></span>
                                                                </a>
                                                            </li>`);
                    }
                }
            }
        });
    </script>
